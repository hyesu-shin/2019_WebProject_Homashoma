                        <td colspan="2" class = "loginbutton"><input type = "button" class = "login" value = "LOGIN" onClick="logincheck()"></td>
                    </tr>
                    <tr> 
                        <td colspan="2" class = "joinbutton"><input type = "button" class = "join" value = "JOIN" onClick="location.href='./selectjoin'"></td>
                    </tr>
                </table>
            </form>
        </div>
        <script type="text/javascript" src="/javascripts/loginform.js"></script>
    </main>
    <footer>
        <% include ../layout/footer %>
